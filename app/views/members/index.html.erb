<h1>Mitglieder</h1>

<div class="">
    <%= form_tag members_path, class: "", method: :get do %>
      <div style="width: 250px; float: right">
        <%= select_tag "category", options_for_select(@categories, params[:category]),  class: "custom-select custom-select-sm", :onchange => "this.form.submit();", :include_blank => 'Alle Kategorien'%>
      </div>
<br><br>
      <div class="input-group mb-3">
      <%= text_field_tag :search, params[:search], placeholder: "Mitglieder durchsuchen ...", class: "form-control" %>
      <div class="input-group-append">
        <%= button_tag :submit, class: "btn btn-sm btn-primary" do %>
          Suchen
        <% end %>
      </div>
    <% end %>
</div>
<br><br>


<div class="digg_pagination">
  <%= will_paginate @members, renderer: BootstrapPagination::Rails %>
</div>
<%= form_tag members_path, method: :get do %>
  <div style="width: 60px; float: left;margin-right: 8px;">
      <%= select_tag :per_page, options_for_select([10, 25, 50, 100], params[:per_page]),class: "custom-select custom-select-sm", :onchange => "this.form.submit();" %>
  </div>
  <small>Ergebnisse pro Seite</small>
<% end %>

<table class="table table-hover ">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Kategorie</th>
      <th scope="col">Threema ID</th>
    </tr>
  </thead>
  <tbody>
    <%= render @members %>

  </tbody>
</table>
