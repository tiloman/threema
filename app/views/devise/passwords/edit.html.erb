<h2>Passwort ändern</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Neues Passwort" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Passwort wiederholen" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Passwort ändern", class:"custom-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
