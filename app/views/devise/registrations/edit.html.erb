<h2>Daten bearbeiten</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

Name
  <div class="form-row">

   <div class="col">
     <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Vorname" %>
   </div>
   <div class="col">
     <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Nachname" %>
   </div>
 </div>

<br>

  <div class="field">
    Email
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "E-Mail" %>
  </div>
<br>
  <div class="field">
    Threema ID
    <%= f.text_field :threema_id, class: "form-control", placeholder: "Threema ID" %>
  </div>


<hr>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    Passwort (frei lassen wenn es nicht geändert werden soll)
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

<br>
Status: <%= resource.role %><br><br>

  <div class="actions">
    <%= f.submit "Daten aktualisieren", class:"btn btn-primary" %>
  </div>
<% end %>
<br><br>
<hr>

<h3>Account löschen?</h3>

<%= button_to "Account löschen", registration_path(resource_name), data: { confirm: "Sicher?" }, class:"btn btn-danger", method: :delete %>
