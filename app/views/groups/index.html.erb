Insgesamt <%= @groups.count %> Gruppen
<div class="pagination">

<%= will_paginate @groups, renderer: BootstrapPagination::Rails %>
</div>
<div class="input-group">
    <%= form_tag groups_path, class: "form-inline", method: :get do %>
      <%= text_field_tag :search, params[:search], placeholder: "Suchen..", class: "form-control form-control-sm" %>
      <div class="input-group-append">
      <%= button_tag :submit, class: "btn btn-sm btn-primary" do %>
        Suchen
      <% end %>
      </div>
    <% end %>
</div>

<br><br>

<% if @not_synced_groups.any? %>
  <h2> Noch nicht synchronisiert </h2><br>
  <div class="group_flex_container">
    <%= render @not_synced_groups  %>
  </div>
  <hr>
<% end %>
<div class="group_flex_container">
<%= render @groups %>
</div>
