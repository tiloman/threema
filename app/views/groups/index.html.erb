
<h3>Alle Gruppen </h3>
<%= form_tag groups_path, class: "form-inline", method: :get do %>

<div class="input-group mb-3">
  <%= text_field_tag :search, params[:search], placeholder: "Gruppen durchsuchen..", class: "form-control" %>
  <div class="input-group-append">
  <%= button_tag :submit, class: "btn btn-outline-secondary" do %>
    <i class="fas fa-search"></i>
  <% end %>
  </div>
</div>
<% end %>



<div class="group_flex_container">
<%= render @groups %>
</div>

<div class="digg_pagination">
  <%= will_paginate @groups, renderer: BootstrapPagination::Rails %>
</div>
<%= form_tag groups_path, method: :get do %>
  <div style="width: 60px; float: left;margin-right: 8px;">
      <%= select_tag :per_page, options_for_select([10, 25, 50, 100], params[:per_page]),class: "custom-select custom-select-sm", :onchange => "this.form.submit();" %>
  </div>
  <small>Ergebnisse pro Seite</small>
<% end %>
