<%= form_with(url: "/feeds/#{@feed.id}/send_feed_new_message", method: "put") do %>
  <% prefilled_text = "*#{current_user.name} verteilt an #{@feed.name}:* \n Bitte Text eingeben..." %>
  <%= text_area_tag "message", prefilled_text,  class: "form-control",rows: "4" , minlength: 10, maxlength: 3000 %>
  <p class="small">Um Texte <b>fett</b>, <i>kursiv</i> oder durchgestrichen zu formatieren, flankiere sie einfach mit folgenden Zeichen: *fett*, _kursiv_, ~durchgestrichen~.</p>
<br>
  <%= submit_tag "Nachricht senden", data: { confirm: "Nachricht senden?" }, class: "btn btn-primary btn-block" %>
<% end %>
